<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Restaurante siglo XXI</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link rel="stylesheet" href="~/Recursos/homestyle.css" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <p>
                    <a href='@Url.Action("Index", "Usuario", new { area = "" })'
                       class="navbar-brand">
                        <i class="fa fa-cutlery text-danger"></i>
                        Restaurante Siglo XXI

                    </a>
                </p>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Usuarios", "Index", "Usuario")</li>
                        <li>@Html.ActionLink("Mesas", "Index", "Mesa")</li>
                        <li>@Html.ActionLink("Platos", "Index", "Plato")</li>
                        <li>@Html.ActionLink("Insumos", "Index", "Insumo")</li>
                        <li>@Html.ActionLink("Clientes", "Index", "Cliente")</li>
                        <li>@Html.ActionLink("Reservas", "Reservas", "Cliente")</li>   
                        <li>@Html.ActionLink("Lista de compra", "Index", "PedidoInsumos")</li>
                    }
                    else if (User.IsInRole("Bodega"))
                    {
                        <li>@Html.ActionLink("Insumos", "Index", "Insumo")</li>
                        
                    }
                    else if (User.IsInRole("Cocina"))
                    {            
                        <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
                        <li>@Html.ActionLink("Platos", "Index", "Plato")</li>
                    }
                    else if (User.IsInRole("Finanzas"))
                    {
                        <li>@Html.ActionLink("Pedidos", "Index", "Finanzas")</li>
                        <li>@Html.ActionLink("Ventas", "Ventas", "Finanzas")</li>
                    }                   

                </ul>
                <ul class="nav navbar-nav navbar-right" style="float:right;">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a>Bienvenido @(User.Identity.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest")</a>
                        </li>
                        <li>
                            <a href="@Url.Action("SingOut","Cuenta")">Cerrar sesión</a>
                        </li>
                    }                

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>