@model IEnumerable<Restaurante.Datos.PEDIDO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/jq-3.3.1/dt-1.10.18/datatables.min.css" />
<h2 style="color: #fff">Pedidos &raquo; Servidos</h2>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Usuarios</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-striped" id="MyTable">
                    <thead class="thead thead-dark">
                        <tr>
                            <th>
                                ID Pedido
                            </th>
                            <th>
                                Cliente
                            </th>
                            <th>
                                Mesa
                            </th>
                            <th>
                                Fecha pedido
                            </th>
                            <th>
                                Estado
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID_PEDIDO)
                                </td>
                                <td>
                                    @item.CLIENTE.NOMBRE_CLIENTE @item.CLIENTE.APELLIDO_CLIENTE
                                </td>
                                <td>
                                    N° @Html.DisplayFor(modelItem => item.MESA_NUM_MESA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FECHA_PEDIDO)
                                </td>
                                <td>
                                    @{
                                        if (item.ESTADO_PEDIDO == 1)
                                        {
                                            <label><span class="label label-success">Servida</span></label>
                                        }
                                        else if (item.ESTADO_PEDIDO == 2)
                                        {
                                            <h2 class="label label-info">Pagando </h2>
                                        }
                                        else
                                        {

                                            <h2 class="label label-danger">Pagando </h2>
                                        }
                                    }
                                </td>
                                <td>                             

                                    <a href='@Url.Action("DetallePedido", new { id = item.ID_PEDIDO })' class="btn btn-warning">
                                        <i class="fa fa-edit"></i>
                                        Ver Detalle
                                    </a>
                                </td>
                            </tr>
                                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

