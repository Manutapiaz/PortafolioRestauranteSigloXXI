@model IEnumerable<Restaurante.Datos.PLATO>

@{
    ViewBag.Title = "Platos";
    Layout = null;
}
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width = device-width, initial-scale = 1, shrink-to-fit = no">
    <title>Menú</title>
    <!--Bootstrap CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="~/Recursos/link.css" />
</head>
<body>
    <!--JS, Popper.js and jQuery-->
    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <!--Font awesome-->
    <script src="https://kit.fontawesome.com/87731b9630.js" crossorigin="anonymous"></script>
    <!--Toastr-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <!--Navbar-->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container">
            <a class="navbar-brand" style="color: #ffffff">
                <i class="fa fa-cutlery text-danger"></i>
                Restaurant siglo XXI
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Platos", "Index", "PedidoCliente", new { @style = "color: #fff;text-decoration:none;padding: 10px 15px;" })</li>

                    <li class="nav-item">@Html.ActionLink("Carro", "Carro", "PedidoCliente", new { @style = "color: #fff;text-decoration:none;padding: 10px 15px;" })</li>

                    <li class="nav-item">@Html.ActionLink("Ver Pedidos", "Pedidos", "PedidoCliente", new { @style = "color: #fff;text-decoration:none;padding: 10px 15px;" })</li>
                </ul> 
                <ul class="nav navbar-nav navbar-right" style="padding-left:300px">
                    @if (Session["nombre"] != null)
                    {
                        var var = Session["nombre"];
                        <li>
                            <a style="color:#fff;">Bienvenido  @var</a>
                        </li>                     
                        <li class="nav-item">@Html.ActionLink("Cerrar sesión", "SingOut", "PedidoCliente", new { @style = "color: #fff;text-decoration:none;padding: 10px 15px;" })"</li>
                     
                    }

                </ul>
            </div>
        </div>
    </nav>
    <!--End navbar-->
    <!--Carousel-->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Recursos/almonds-berries-blackberries-1099680.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Desayuno</h5>
                    <p>Búscalo y pídelo</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Recursos/burrito-chicken-close-up-461198 (1).jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Almuerzo</h5>
                    <p>Búscalo y pídelo</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Recursos/cuisine-delicious-dinner-958545.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Cena</h5>
                    <p>Búscalo y pídelo</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Siguiente</span>
        </a>
    </div>
    <div class="container">
        <!--End carousel-->
        <br /><br /><br />
        <!--Menú-->
        <div class="row">
            @foreach (var item in Model)
            {
                    <!--Filter-->

                    <!--End filter-->
                <div class="col-lg-3 col-sm-5 col-md-4 col-xs-1">
                    <div class="card text-center bg-light border-primary" style="width: 15rem; ">
                        <img class="card-img-top" src="@Url.Content("http://localhost:49547" + item.IMAGEURL)" alt="Card image cap" style="height: 150px">
                        <div class="card-body border-primary">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.NOMBRE_PLATO)</h5>
                            <p class="card-text">Comida típica @Html.DisplayFor(modelItem => item.TIPO_PLATO.NOMBRE)</p>
                            <p class="card-text"><small>Precio: @Html.DisplayFor(modelItem => item.PRECIO_VENTA)</small></p>
                        </div>
                        <div class="card-footer border-primary">
                            <a id="toastr" href='@Url.Action("Create", new { id = item.ID_PLATO })' class="btn btn-success">
                                <i class="fa fa-shopping-cart"></i>
                                Agregar al pedido
                            </a>
                        </div>
                    </div>
                    <br />
                </div>
            }
            <script type="text/javascript">
                document.getElementById('toastr').addEventListener('click', function () {
                    toastr.info("Producto agregado");
                })
            </script>

        </div>
        <!--End menú-->
    </div>

    <br /><br />
    <!-- footer -->
    <footer style="background-color: #2c292f; bottom:0px;">
        <div class="container">
            <div class="row ">
                <div class="col-md-4 text-center text-md-left ">
                    <div class="py-0">
                        <h3 class="my-4 text-white">Restaurant siglo XXI</h3>
                        <p class="footer-links font-weight-bold">
                            <a class="text-white" href="#">Inicio</a>
                            |
                            <a class="text-white" href="#">Blog</a>
                            |
                            <a class="text-white" href="#">Nosotros</a>
                        </p>
                        <p class="text-light py-4 mb-4">&copy;2019 Restaurant siglo XXI</p>
                    </div>
                </div>
                <div class="col-md-4 text-white text-center text-md-left ">
                    <div class="py-2 my-4">
                        <div>
                            <p class="text-white">
                                <i class="fa fa-map-marker mx-2 "></i>
                                Melipilla
                            </p>
                        </div>
                        <div>
                            <p><i class="fa fa-phone  mx-2 "></i> (+56)9 54092145</p>
                        </div>
                        <div>
                            <p><i class="fa fa-envelope  mx-2"></i><a href="mailto:soporte@rsxii.cl">Email</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-white my-4 text-center text-md-left ">
                    <span style="font: font-weight-bold">FTP</span>
                    <p class="text-warning my-2">Somos una empresa desarrolladora de software, poniendo énfasis en la experiencia final de sus clientes</p>
                    <div class="py-2">
                        <a href="#"><i class="fab fa-facebook fa-2x text-primary mx-3"></i></a>
                        <a href="#"><i class="fab fa-google-plus fa-2x text-danger mx-3"></i></a>
                        <a href="#"><i class="fab fa-twitter fa-2x text-info mx-3"></i></a>
                        <a href="#"><i class="fab fa-youtube fa-2x text-danger mx-3"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- end of footer -->
</body>
</html>
