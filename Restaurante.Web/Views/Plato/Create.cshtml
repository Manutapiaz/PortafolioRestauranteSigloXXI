@model Restaurante.Datos.PLATO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: #fff">Platos &raquo; Agregar plato</h2>


@using (Html.BeginForm("Create", "Plato", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="background: rgba(0,0,0,0.6); width: 70rem">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" style="color: #fff">Nombre del plato</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBRE_PLATO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOMBRE_PLATO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="color: #fff">Costo de preparación</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PRECIO_COSTO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PRECIO_COSTO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="color: #fff">Precio venta</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PRECIO_VENTA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PRECIO_VENTA, "", new { @class = "text-danger" })
            </div>
        </div>


        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems = ViewBag.items;


        }

        <div class="form-group">
            <label class="control-label col-md-2" style="color: #fff">Tipo de plato</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TIPO_PLATO_ID_TIPO_PLATO, listItems, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TIPO_PLATO_ID_TIPO_PLATO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="color: #fff">Imagen</label>
            <div class="col-md-10">
                <input type="file" name="file" id="file" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="color: #fff">Descripción</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DESCRIPCION, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="color: #fff">Tiempo Preparacion(Minutos)</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TIEMPO_PREPARACION, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TIEMPO_PREPARACION, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-success" />
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
        <br />
    </div>
            }


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
